<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foodplacetoronto.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/toronto">

        <TextView
            android:id="@+id/txtFoodPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="114dp"
            android:fontFamily="monospace"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtToronto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFoodPlace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:fontFamily="monospace"
            android:text="@string/city"
            android:textColor="#fff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:onClick="enterApp"
            android:text="@string/button_enter" />


    </RelativeLayout>

</LinearLayout>
