<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ciconi.assignmentrestaurant.Restaurants"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/chooseRest"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="ObsoleteLayoutParam,UnusedAttribute"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="87dp" />

    <ListView
        android:id="@+id/listItalianRestaurants"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@color/colorAccent"
        android:hapticFeedbackEnabled="false"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonBack"
        style="@android:style/Widget.DeviceDefault.Light.Button.Small"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>

