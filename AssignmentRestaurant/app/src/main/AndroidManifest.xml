<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ciconi.assignmentrestaurant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Cuisines">

            <intent-filter>
                <action android:name="com.ciconi.assignmentrestaurant.Cuisines" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Restaurants">
            <intent-filter>
                <action android:name="com.ciconi.assignmentrestaurant.Restaurants" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Food" >
        <intent-filter>
            <action android:name="com.ciconi.assignmentrestaurant.Food" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <activity
            android:name=".CheckOut"
            android:label="@string/title_activity_summary" >
        <intent-filter>
            <action android:name="com.ciconi.assignmentrestaurant.CheckOut" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <activity
            android:name=".CustomerInfo"
            android:label="@string/title_activity_client_form">
            <intent-filter>
                <action android:name="com.ciconi.assignmentrestaurant.ClientForm" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>