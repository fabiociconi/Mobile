<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ciconi.labassignment3.Exercise1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/main_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/line_thickness"
                    android:textAlignment="center">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/line_color"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrow Keys"
                    android:textAlignment="center" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radio_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/red" />

                    <RadioButton
                        android:id="@+id/radio_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yellow" />

                    <RadioButton
                        android:id="@+id/radio_cyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cyan" />
                </RadioGroup>

                <TableLayout

                    android:id="@+id/arrow_table"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">


                    <TableRow

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TableRow

                            android:layout_width="25dp"
                            android:layout_height="match_parent" />

                        <ImageButton

                            android:id="@+id/buttonUp"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:keyboardNavigationCluster="true"
                            android:onClick="arrows"
                            android:src="@drawable/ic_keyboard_arrow_up_black_24dp">

                        </ImageButton>
                    </TableRow>

                    <TableRow

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton

                            android:id="@+id/buttonLeft"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:onClick="arrows"
                            android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

                        <TableRow

                            android:layout_width="25dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/buttonRight"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"

                            android:onClick="arrows"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp">

                        </ImageButton>


                    </TableRow>


                    <TableRow

                        android:layout_width="25dp"
                        android:layout_height="wrap_content">

                        <TableRow

                            android:layout_width="25dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/buttonDown"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:onClick="arrows"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp">

                        </ImageButton>
                    </TableRow>
                </TableLayout>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/clear_canvas"
                    />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>

            </TableRow>
        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageViewForDrawing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:minHeight="100dp"
            android:minWidth="100dp" />


    </LinearLayout>

</LinearLayout>

